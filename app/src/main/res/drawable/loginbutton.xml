<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="3dip" android:color="#6666cc" />
            <gradient android:angle="-90" android:startColor="#8383db" android:endColor="#6060c4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="3dip" android:color="#6666cc" />
            <solid android:color="#6666cc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="3dip" android:color="#6666cc" />
            <gradient android:angle="-90" android:startColor="#6666cc" android:endColor="#6666cc" />
        </shape>
    </item>
</selector>