<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Rlv_main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@android:color/white">


    <RelativeLayout
        android:id="@+id/Rlv_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#6666cc"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Post Property"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="-90dp"
        android:gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/backendbuilding" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/Rlv_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="-4dp">


            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/Rlv_Key_Floor_plan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loggi"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@+id/Rlv_Price"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:text="To sell an investment property through JV Hub and get exposure to a hub of verified invesment professionals\n\nPlease complete your details below and an investment consultant will be in touch shortly."
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="normal|bold" />


            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="63dp"
                android:layout_marginTop="195dp"
                android:text="For Sale"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radioButton"
                android:layout_alignBottom="@+id/radioButton"
                android:layout_marginStart="38dp"
                android:layout_toEndOf="@+id/radioButton"
                android:text="To rent"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/Rlv_Price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView13"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/deepsingh">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="@null" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/Rlv_type_of_property"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_Price"
                android:layout_marginTop="15dp"
                android:background="@drawable/deepsingh">


                <Spinner
                    android:id="@+id/spinner_imgtype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentStart="true"
                    android:background="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlv_category"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_type_of_property"
                android:layout_marginTop="15dp"
                android:background="@drawable/deepsingh"
                android:visibility="gone">


                <Spinner
                    android:id="@+id/spinner_Category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentStart="true"
                    android:background="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlv_Search"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_category"
                android:layout_marginTop="15dp"
                android:background="@drawable/bordercolour">

                <AutoCompleteTextView
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_marginLeft="3dp"
                    android:layout_toEndOf="@+id/imageView15"
                    android:background="@android:color/transparent"
                    android:hint="Search Location"
                    android:inputType="textPersonName" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/seach" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlv_Adress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_Search"
                android:layout_marginTop="15dp"
                android:background="@drawable/bordercolour">

                <EditText
                    android:id="@+id/Edt_adress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_marginLeft="3dp"

                    android:background="@android:color/transparent"
                    android:hint="Address"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlv_Description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_Adress"
                android:layout_marginTop="15dp"
                android:background="@drawable/bordercolour">

                <EditText
                    android:id="@+id/Edt_Description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_marginLeft="3dp"

                    android:background="@android:color/transparent"
                    android:hint="Property Description"
                    android:inputType="textMultiLine"
                    android:paddingLeft="8dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlv_Key_features"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_Description"
                android:layout_marginTop="15dp"
                android:background="@drawable/bordercolour">

                <EditText
                    android:id="@+id/Edt_Key_features"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_marginLeft="3dp"

                    android:background="@android:color/transparent"
                    android:hint="Key Features/Specifications"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlv_Key_Floor_plan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_Key_features"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/Edt_Floor_plan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:background="@drawable/bordercolour"

                    android:inputType="textPersonName"
                    android:text="Select Floor Plan" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rlv_Phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignEnd="@+id/Rlv_Price"
                android:layout_alignStart="@+id/Rlv_Price"

                android:layout_below="@+id/Rlv_Key_Floor_plan"
                android:layout_marginTop="75dp"
                android:background="@drawable/bordercolour">

                <EditText
                    android:id="@+id/Edt_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:layout_marginLeft="3dp"

                    android:background="@android:color/transparent"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:paddingLeft="8dp" />


            </RelativeLayout>

            <include
                android:id="@+id/include"
                layout="@layout/include_layout_for_post_property"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Rlv_Phone"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/Rlv_Key_Floor_plan"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView27"
                android:visibility="invisible"
                app:srcCompat="@drawable/remove" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
